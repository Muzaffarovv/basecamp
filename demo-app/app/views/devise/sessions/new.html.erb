<body class="body-2">
  <div class="container-2">

<%= stylesheet_link_tag "register" %>
<h2 class="h2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field"><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Enter your email" %>
  </div>

  <div class="field"><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %> <br>

  <div class="actions"> 
    <%= f.submit "Log in", data: {turbo: false}, class: "btn btn-primary" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-primary" %>
  </div>
<% end %>


</div>

</body>